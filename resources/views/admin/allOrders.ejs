<%- include("../partials/sidebar.ejs") %>
    <section id="main-content">
        <%- include("../partials/dashNav.ejs") %>
            <div class="main-content-info mt-12">
                <div class="px-12 py-10 w-full">
                    <h1 class="font-bold text-2xl mb-4">All Orders</h1>
                    <table class="w-full mx-auto px-16 ptable-auto bg-white ">
                        <thead>
                            <tr class="pt-12">
                                <th class="px-4 py-2 text-left ">Orders</th>
                                <th class="px-4 py-2 text-left">Address</th>
                                <th class="px-4 py-2 text-left">Phone no.</th>
                                <th class="px-4 py-2 text-left">Status</th>
                                <th class="px-4 py-2 text-left">Placed at</th>
                                <th class="px-4 py-2 text-left">Payment Status</th>
                                <th class="px-4 py-2 text-left">Actions</th>

                            </tr>
                        </thead>
                        <% orders.forEach(function(order) { %>
                            <tr class="text-gray-600 border-b border-gray-200 hover:bg-gray-100">
                                <td class=" px-4 py-2 text-left">
                                    <%= order.id %>
                                </td>
                                <td class=" px-4 py-2 text-left">
                                    <%= order.address %>
                                </td>
                                <td class=" px-4 py-2 text-left">
                                    <%= order.phone %>
                                </td>
                                <td class=" px-4 py-2 text-left">
                                    <%= order.status %>
                                </td>
                                <td class=" px-4 py-2 text-left">
                                    <%= moment(order.createdAt ).format('MM-DD-YYYY, h:mm:ss a')%>
                                </td>
                                <td class=" px-4 py-2 text-left">
                                    <%= order.paymentStatus ? 'paid' : 'Not Paid' %>
                                </td>
                                <td class=" px-8 py-2 ">
                                    <a href="/deleteOrders?id=<%= order._id %>">
                                        <i class="fas fa-trash-alt hover:text-pink-700"></i>

                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </table>
                </div>
            </div>
    </section>