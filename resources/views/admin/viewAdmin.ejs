<%- include("../partials/sidebar.ejs") %>
    <section id="main-content">
        <%- include("../partials/dashNav.ejs") %>
            <div class="main-content-info mt-12">
                <div class="px-12 py-10 w-full">
                    <div class="flex justify-between">
                        <h1 class="font-bold text-2xl mb-4">All Admins</h1>
                        <a href="/dashboard/addAdmin"><button
                                class="btn-primary rounded-full text-white font-bold py-2 px-4 content-center  rounded focus:outline-none focus:shadow-outline">Add
                                new admins</button></a>

                    </div>
                    <table class="w-full mx-auto px-16 ptable-auto bg-white ">
                        <thead>
                            <tr class="pt-12">
                                <th class=" px-4 py-2 text-left">Name</th>
                                <th class=" px-4 py-2 text-left">Email Address</th>
                                <th class=" px-4 py-2 text-left">Actions</th>
                            </tr>
                        </thead>
                        <% admins.forEach(function(admin) { %>
                            <tr class="text-gray-600 border-b border-gray-200 hover:bg-gray-100">
                                <td class=" px-4 py-2 text-left">
                                    <%= admin.name %>
                                </td>
                                <td class=" px-4 py-2 text-left">
                                    <%= admin.email %>
                                </td>
                                <td class=" px-6 py-2 text-left ">
                                    <% if (admin._id!='60feb47a9179e84ab43109d7' ) { %>
                                        <a href="/deleteAdmin?id=<%= admin._id %>">
                                            <i class="fas fa-trash-alt hover:text-pink-700"></i>
                                        </a>
                                        <% } %>
                                            &nbsp;
                                            <a href="/updateAdmin?id=<%= admin._id %>">
                                                <i class="fas fa-edit hover:text-pink-700"></i>
                                            </a>
                                </td>
                            </tr>

                            <% }) %>
                    </table>
                </div>
            </div>
    </section>