<%- include("../partials/sidebar.ejs") %>
    <section id="main-content">
        <%- include("../partials/dashNav.ejs") %>
            <div class="main-content-info mt-12">
                <div class="px-12 py-10 w-full">
                    <div class="flex justify-between">
                        <h1 class="font-bold text-2xl mb-4">All Categories</h1>
                        <a href="/dashboard/addCategory"><button
                                class="btn-primary rounded-full text-white font-bold py-2 px-4 content-center  rounded focus:outline-none focus:shadow-outline">Add
                                new category</button></a>

                    </div>
                    <table class="w-full mx-auto px-16 ptable-auto bg-white ">
                        <thead>
                            <tr class="pt-12">
                                <th class=" px-4 py-2 text-left">Name</th>
                                <th class=" px-4 py-2 text-left">Description</th>
                                <th class=" px-4 py-2 text-left">Id</th>
                                <th class=" px-4 py-2 text-left">Image</th>
                                <th class=" px-4 py-2 text-left">Actions</th>
                            </tr>
                        </thead>
                        <% categories.forEach(function(category) { %>
                            <tr class="text-gray-600 border-b border-gray-200 hover:bg-gray-100">
                                <td class=" px-4 py-2 text-left">
                                    <%= category.name %>
                                </td>
                                <td class=" px-4 py-2 text-left">
                                    <%= category.description %>
                                </td>
                                <td class=" px-4 py-2 text-left">
                                    <%= category._id %>
                                </td>
                                <td class=" px-4 py-2 text-left">
                                    <image src="/img/category/<%= category.image %>" />
                                </td>

                                <td class=" px-4 py-2 text-left">
                                    <a href="/deleteCategory?id=<%= category._id %>">
                                        <i class="fas fa-trash-alt hover:text-pink-700"></i>
                                    </a>
                                    &nbsp;
                                    <a href="/updateCategory?id=<%= category._id %>">
                                        <i class="fas fa-edit hover:text-pink-700"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </table>
                </div>
            </div>
    </section>