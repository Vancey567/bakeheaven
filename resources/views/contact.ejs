<%- include('./partials/header.ejs')%>

    <section id="contact" class=" contact login flex justify-center pt-16">

        <div class="contact flex flex-col items-center bg-gray-300 w-1/2">
            <% if(messages.success) { %>
                <span id="success-alert" class="text-white text-sm p-4 border bg-green-600 mb-2 w-3/4">
                    <%= messages.success %>
                </span>
                <% } %>
                    <% if(messages.error) { %>
                        <span id="error-alert" class="text-white text-bold text-sm p-4 border bg-red-500 mb-2 w-3/4">
                            <%= messages.error %>
                        </span>
                        <% } %>
                            <h1 class="font-bold text-5xl pb-4">Contact Us</h1>
                            <div class="w-full max-w-lg">
                                <form action="/contact" method="POST">
                                    <div class="">
                                        <input name="name"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 mb-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            name="name" type="Name" placeholder="Your Name">
                                        <input name="email"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 mb-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            name="email" type="email" placeholder="Your Email">
                                        <textarea name="message" rows="4"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 mb-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            type="text" placeholder="Your message !" name="message"></textarea>
                                        <button
                                            class="btn-primary rounded-xl w-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                                            type="submit" value="submit">
                                            Submit
                                        </button>
                                    </div>
                                </form>
                            </div>
        </div>
    </section>

    <%- include("./partials/footer.ejs") %>